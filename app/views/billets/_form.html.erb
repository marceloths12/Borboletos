
<div class="mt-4 ">
  <div class="p-6 bg-white rounded-md shadow-md">
    <h2 class="text-lg font-semibold text-gray-700 capitalize">
      Dados do boleto
    </h2>
    <%= form_with(model: billet, class: "contents", data:{ controller: 'billets' }) do |form| %>
      <% if billet.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
          <h2><%= t('.error')%></h2>
          <ul>
            <% billet.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="w-full grid grid-cols-2 gap-x-2 gap-y-2 ">
        
        <div class="col-span-2">
          <%= form.label :customer_person_name, class:"text-base" %>
          <%= form.text_field :customer_person_name, placeholder: t('.customer_person_name'),required: true,
            class: "w-full mt-1 border-gray-500 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        </div>
        
        <div class="col-span-2">
          <%= form.label :customer_cnpj_cpf, class:"text-base" %>
          <%= form.text_field :customer_cnpj_cpf, placeholder: t('.customer_cnpj_cpf'), required: true,
            maxlength: 14, minlength: 11,
            class: "w-full mt-1 border-gray-500 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        </div>
        
        <div class="grid grid-cols-subgrid col-span-2 md:col-span-2">
          <div class="col-span-1">
            <%= form.label :amount, class:"text-base" %>
            <%= form.text_field :amount, placeholder: t('.amount'), required: true,
              class: "w-full mt-1 border-gray-500 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
          </div>
          <div class="col-span-1">
            <%= form.label :expire_at, class:"text-base" %>
            <%= form.date_field :expire_at, placeholder: t('.expire_at'), required: true,
              class: "w-full mt-1 border-gray-500 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
          </div>
        </div>

        <div class="col-span-1">
          <%= form.label :customer_zipcode, class:"text-base" %>
          <%= form.text_field :customer_zipcode, placeholder: t('.customer_zipcode'), required: true,
              data:{ action:'input->billets#findAddress' },
            class: "w-full mt-1 border-gray-500 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        </div>

        <div class="grid grid-cols-subgrid col-start-1 col-span-2 md:col-span-2">
          <div class="col-span-1">
            <%= form.label :customer_address, class:"text-base" %>
            <%= form.text_field :customer_address, placeholder: t('.customer_address'),required: true,
              data: {  'billets-target': 'address' },
              class: "w-full mt-1 border-gray-500 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
          </div>
          <div class="col-span-1">
            <%= form.label :customer_number, class:"text-base" %>
            <%= form.text_field :customer_number, placeholder: t('.customer_number'),
              class: "w-full mt-1 border-gray-500 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
          </div>
        </div>

        <div class="col-span-1">
          <%= form.label :customer_complement, class:"text-base" %>
          <%= form.text_field :customer_complement, placeholder: t('.customer_complement'),
            class: "w-full mt-1 border-gray-500 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        </div>
        <div class="col-span-1">
          <%= form.label :customer_state, class:"text-base" %>  
          <%= form.text_field :customer_state, required: true,
            data: {  'billets-target': 'state' },
            class: "w-full mt-1 border-gray-500 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        </div>
        <div class="col-span-1">
          <%= form.label :customer_city_name, class:"text-base" %>
          <%= form.text_field :customer_city_name, required: true,
            data: {  'billets-target': 'city_name' },
            class: "w-full mt-1 border-gray-500 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        </div>
        <div class="col-span-1">
          <%= form.label :customer_neighborhood, class:"text-base" %>
          <%= form.text_field :customer_neighborhood, required: true,
            data: {  'billets-target': 'neighborhood' },
            class: "w-full mt-1 border-gray-500 rounded-md focus:border-indigo-600 focus:ring focus:ring-opacity-40 focus:ring-indigo-500" %>
        </div>

        <div class="flex justify-start space-x-2 mt-4">
          <%= form.submit class: "px-4 py-2 text-gray-200 bg-gray-800 rounded-md hover:bg-gray-700 focus:outline-none focus:bg-gray-900" %>
          <%= link_to "Cancelar", billets_path, class: "px-4 py-2 text-gray-200 bg-gray-800 rounded-md hover:bg-gray-700 focus:outline-none focus:bg-gray-900" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

