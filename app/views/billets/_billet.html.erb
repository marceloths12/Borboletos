<div class='w-full p-6 bg-white rounded hover:shadow-md hover:bg-gray-50 text-base text-gray-600'>
  <div class="flex justify-between py-1 text-lg ">
    <div class="">
      <%= billet.customer_person_name %>
    </div>

    <div class="font-bold">
      <%== t(".situation.#{billet.customer_situation}") if billet.customer_situation.present?  %>
    </div>
  </div>
  
  <div class="h-36 p-5 border-4 border-dashed border-gray-100">
    <div class="flex justify-between">
      <span class="text-base text-gray-600" >Id: #<%= billet.external_id %> </span>
      <span class="text-base text-gray-600" >CPF/CNPJ:  <%= billet.customer_cnpj_cpf %> </span>
    </div>
    <div class="flex flex-row justify-between text-black">
      <div class="flex flex-col justify-between font-semibold text-2xl">
        R$ <%= number_with_precision(billet.amount, precision: 2) %>
        <span class="text-base text-gray-600" >Valor</span>
      </div>
      
      <div class="flex flex-col justify-between font-semibold text-2xl">
        <%= l(billet.expire_at, format: :default ) %> 
        <span class="text-base text-gray-600" >Vencimento</span>
      </div>
    </div>
  </div>

  <div class="w-full flex justify-between mt-2 py-1">
    <div class="flex space-x-5">
      <%= link_to edit_billet_path(billet) do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="fill-black hover:fill-gray-500" width="30" height="30" viewBox="0 0 24 24"><path d="M19.045 7.401c.378-.378.586-.88.586-1.414s-.208-1.036-.586-1.414l-1.586-1.586c-.378-.378-.88-.586-1.414-.586s-1.036.208-1.413.585L4 13.585V18h4.413L19.045 7.401zm-3-3 1.587 1.585-1.59 1.584-1.586-1.585 1.589-1.584zM6 16v-1.585l7.04-7.018 1.586 1.586L7.587 16H6zm-2 4h16v2H4z"></path></svg>
      <% end %>

      <svg xmlns="http://www.w3.org/2000/svg" class="fill-black hover:fill-gray-500 hover:opacity-0 " width="30" height="30" viewBox="0 0 24 24"><path d="M11 10H9v3H6v2h3v3h2v-3h3v-2h-3z"></path><path d="M4 22h12c1.103 0 2-.897 2-2V8c0-1.103-.897-2-2-2H4c-1.103 0-2 .897-2 2v12c0 1.103.897 2 2 2zM4 8h12l.002 12H4V8z"></path><path d="M20 2H8v2h12v12h2V4c0-1.103-.897-2-2-2z"></path></svg>
      
      <%= link_to billet do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="fill-black hover:fill-gray-500"width="35" height="35" viewBox="0 0 24 24"><path d="M12.015 7c4.751 0 8.063 3.012 9.504 4.636-1.401 1.837-4.713 5.364-9.504 5.364-4.42 0-7.93-3.536-9.478-5.407 1.493-1.647 4.817-4.593 9.478-4.593zm0-2c-7.569 0-12.015 6.551-12.015 6.551s4.835 7.449 12.015 7.449c7.733 0 11.985-7.449 11.985-7.449s-4.291-6.551-11.985-6.551zm-.015 5c1.103 0 2 .897 2 2s-.897 2-2 2-2-.897-2-2 .897-2 2-2zm0-2c-2.209 0-4 1.792-4 4 0 2.209 1.791 4 4 4s4-1.791 4-4c0-2.208-1.791-4-4-4z"/></svg>
